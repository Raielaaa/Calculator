<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CalculatorResponsiveTest4" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#f7f7f7</item>
        <item name="colorPrimaryVariant">#f7f7f7</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:textColorPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/acme</item>
    </style>

    <style name="Theme.CalculatorResponsiveTest4.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.CalculatorResponsiveTest4.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" >
        <!-- Modify the toolbar style -->
        <item name="android:toolbarStyle">@style/CustomToolbarStyle</item>
        <item name="fontFamily">@font/acme</item>
    </style>

    <style name="CustomToolbarStyle" parent="Widget.AppCompat.Toolbar">
        <!-- Change the icon color -->
        <item name="android:tint">@android:color/black</item>
        <!-- Change the title text color -->
        <item name="android:titleTextColor">@android:color/black</item>
        <item name="android:text">Standard Calculator</item>
    </style>

    <style name="Theme.CalculatorResponsiveTest4.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" > </style>

    <!-- NavigationView style -->
    <style name="ThemeOverlay.AppCompat.navTheme">
        <!-- Color of text and icon when SELECTED -->
        <item name="colorPrimary">#eb6767</item>
        <!-- Background color when SELECTED -->
        <item name="colorControlHighlight">#ff826f</item>
    </style>
    <!-- NavigationView item font -->
    <style name="NavigationText" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/acme</item>
    </style>
    <!-- Converter layout: Input banner -->
    <style name="MyCardView" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.MaterialCardView.Cut</item>
    </style>
    <style name="ShapeAppearanceOverlay.MaterialCardView.Cut" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">8dp</item>
        <item name="cornerSizeTopLeft">8dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>
</resources>